meta {
  name: Get All Postings
  type: http
  seq: 2
}

get {
  url: {{ngo_service_url}}/api/v1/postings?page=0&size=20&sortBy=createdAt&sortDir=DESC
  body: none
  auth: inherit
}

params:query {
  page: 0
  size: 20
  sortBy: createdAt
  sortDir: DESC
}

tests {
  test("Should retrieve postings", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property("content");
    expect(res.body.content).to.be.an("array");
    expect(res.body).to.have.property("totalElements");
    expect(res.body).to.have.property("totalPages");
  });
}