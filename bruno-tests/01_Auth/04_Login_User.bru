meta {
  name: Login User
  type: http
  seq: 4
}

post {
  url: {{user_service_url}}/api/v1/users/login
  body: json
  auth: none
}

body:json {
  {
    "email": "john.volunteer@example.com",
    "password": "SecurePass123!"
  }
}

script:post-response {
  if (res.status === 200 && res.body.accessToken) {
    bru.setEnvVar("volunteer_token", res.body.accessToken);
  }
}

tests {
  test("Should login successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property("accessToken");
    expect(res.body).to.have.property("role");
    expect(res.body.expiresIn).to.be.a("number");
  });
}